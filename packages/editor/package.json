{
  "name": "@karma.run/editor",
  "version": "0.12.0-beta.1",
  "main": "./dist/server/index.js",
  "bin": {
    "karma-editor-server": "./dist/server/index.js"
  },
  "license": "MIT",
  "repository": "github:karmarun/karma.run-editor",
  "scripts": {
    "start": "node ./dist/server/index.js",
    "watch:start": "nodemon --watch ./dist/server/index.js --exec \"node ./dist/server/index.js\"",
    "build:dev": "run-p build:server build:client:dev",
    "watch:dev": "run-p build:server build:client:dev watch:start",
    "build:prod": "run-p build:server build:client:prod",
    "watch:prod": "run-p watch:server watch:client:prod watch:start",
    "build:server": "tsc",
    "watch:server": "tsc -w",
    "build:client:dev": "webpack-cli --config webpack.config.dev.ts --progress",
    "watch:client:dev": "webpack-cli --config webpack.config.dev.ts --progress --watch",
    "build:client:prod": "webpack-cli --config webpack.config.prod.ts --progress",
    "watch:client:prod": "webpack-cli --config webpack.config.prod.ts --progress --watch",
    "prepare": "npm run build:prod",
    "lint": "tslint src/**/*"
  },
  "dependencies": {
    "@karma.run/editor-server": "^0.12.0-beta.1",
    "compression": "^1.7.2",
    "dotenv-safe": "^5.0.1",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@karma.run/editor-client": "^0.12.0-beta.1",
    "@karma.run/editor-worker": "^0.12.0-beta.1",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.11.1",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/webpack": "^4.1.6",
    "@types/webpack-merge": "^4.1.3",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "raven-js": "^3.25.1",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.2",
    "webpack-cli": "^2.1.3",
    "webpack-merge": "^4.1.2"
  }
}
