{
  "name": "@karma.run/editor",
  "version": "0.13.0",
  "main": "./dist/server/index.js",
  "description": "Editor CLI for karma.run.",
  "bin": {
    "karma-editor": "./dist/server/index.js"
  },
  "license": "MIT",
  "repository": "github:karmarun/karma.run-editor",
  "scripts": {
    "start": "node ./dist/server/index.js",
    "watch:start": "nodemon --watch ./dist/server --exec \"node ./dist/server/index.js\"",
    "watch": "run-p watch:server watch:client watch:worker",
    "build": "run-p build:server build:client build:worker",
    "build:server": "tsc",
    "watch:build:server": "tsc --watch",
    "watch:server": "run-p watch:build:server watch:start",
    "watch:client": "parcel watch  src/client/index.tsx --out-dir ./dist/client",
    "watch:worker": "parcel watch src/worker/index.ts --out-dir ./dist/worker",
    "build:client": "parcel build src/client/index.tsx --out-dir ./dist/client",
    "build:worker": "parcel build src/worker/index.ts --out-dir ./dist/worker",
    "copy-license": "shx cp ../../LICENSE ./",
    "clean": "run-s clean:*",
    "clean:dist": "shx rm -rf ./LICENSE ./dist",
    "clean:cache": "shx rm -rf ./.cache",
    "prepare": "run-s clean copy-license build"
  },
  "dependencies": {
    "@karma.run/editor-media-server": "^0.12.1",
    "@karma.run/editor-server": "^0.13.0",
    "commander": "^2.15.1",
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@karma.run/editor-client": "^0.13.0",
    "@karma.run/editor-worker": "^0.13.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.11.1",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/webpack": "^4.1.6",
    "@types/webpack-merge": "^4.1.3",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "1.8.1",
    "parcel-plugin-typescript": "0.7.1",
    "raven-js": "^3.25.1",
    "shx": "^0.3.0",
    "typescript": "^2.9.1"
  }
}
