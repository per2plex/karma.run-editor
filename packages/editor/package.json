{
  "name": "@karma.run/editor",
  "version": "0.13.0",
  "main": "./dist/index.js",
  "description": "Editor CLI for karma.run.",
  "bin": {
    "karma-editor": "./dist/index.js"
  },
  "license": "MIT",
  "repository": "github:karmarun/karma.run-editor",
  "scripts": {
    "start": "node ./dist/index.js",
    "watch:start": "nodemon --watch ./dist/index.js --exec \"node ./dist/index.js\"",
    "watch": "run-p watch:server watch:client watch:worker",
    "build": "run-p build:server build:client build:worker",
    "build:server": "tsc",
    "watch:build:server": "tsc --watch",
    "watch:server": "run-p watch:build:server watch:start",
    "watch:client": "webpack --devtool eval-cheap-module-source-map --module-bind ts-loader ./src/client/index.ts --output-path ./dist/static/ --output-public-path /static/ --mode development --watch",
    "watch:worker": "webpack --devtool eval-cheap-module-source-map --module-bind ts-loader ./src/worker/index.ts --output ./dist/static/worker.js --output-public-path /static/ --mode development --watch",
    "build:client": "webpack --devtool source-map --module-bind ts-loader ./src/client/index.ts --output-path ./dist/static/ --output-public-path /static/ --mode production --progress",
    "build:worker": "webpack --devtool source-map --module-bind ts-loader ./src/worker/index.ts --output ./dist/static/worker.js --output-public-path /static/ --mode production --progress",
    "copy-license": "shx cp ../../LICENSE ./",
    "clean": "run-p clean:*",
    "clean:dist": "shx rm -rf ./LICENSE ./dist",
    "clean:cache": "shx rm -rf ./.cache",
    "prepare": "run-s clean copy-license build"
  },
  "dependencies": {
    "@karma.run/editor-media-server": "^0.12.1",
    "@karma.run/editor-server": "^0.13.0",
    "commander": "^2.15.1",
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@karma.run/editor-client": "^0.13.0",
    "@karma.run/editor-worker": "^0.13.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.11.1",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "raven-js": "^3.25.1",
    "shx": "^0.3.0",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.1",
    "webpack": "^4.12.0",
    "webpack-command": "^0.2.1"
  }
}
