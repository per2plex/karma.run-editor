{
  "name": "@karma.run/editor",
  "version": "0.13.0",
  "main": "./dist/cli/index.js",
  "description": "Administrative editor for karma.data.",
  "bin": {
    "karma-editor": "./dist/cli/index.js"
  },
  "license": "MIT",
  "repository": "github:karmarun/karma.tools",
  "scripts": {
    "cli": "node ./dist/cli/index.js run",
    "watch:cli:run": "nodemon --watch ./dist/cli/**/* --exec \"node ./dist/cli/index.js run\"",
    "watch": "npm-run-all clean build:cli --parallel watch:*",
    "build": "run-p build:cli build:client",
    "build:cli": "tsc",
    "watch:cli:build": "tsc --watch",
    "watch:cli": "run-p watch:cli:build watch:cli:run",
    "watch:client": "webpack --require ts-node/register --mode development --watch",
    "build:client": "webpack --require ts-node/register --mode production --progress",
    "copy:license": "shx cp ../../LICENSE ./",
    "clean": "run-p clean:*",
    "clean:dist": "shx rm -rf ./LICENSE ./dist",
    "clean:cache": "shx rm -rf ./.cache",
    "prepare": "run-s clean copy:license build"
  },
  "dependencies": {
    "@karma.run/editor-server": "^0.13.0",
    "commander": "^2.15.1",
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "interpret": "^1.1.0",
    "liftoff": "^2.5.0"
  },
  "devDependencies": {
    "@karma.run/editor-client": "^0.13.0",
    "@karma.run/editor-worker": "^0.13.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.11.1",
    "@types/webpack": "^4.4.1",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "raven-js": "^3.25.1",
    "shx": "^0.3.0",
    "ts-loader": "^4.4.1",
    "ts-node": "^6.1.1",
    "typescript": "^3.0.0-rc",
    "webpack": "^4.12.0",
    "webpack-command": "^0.2.1"
  }
}
